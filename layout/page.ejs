<article class="page-container" id="content-main">
    <% if (page.title && page.title.length > 0) { %>
        <h1><%- page.title %></h1>
        <hr>
    <% } %>
    <div class="page-body">
        <%- page.content %>
    </div>

    <%# Add Gitalk placeholder section if comments are enabled %>
    <% if (page.comments && theme.gitalk && theme.gitalk.enable) { %>
      <%# This is just a placeholder. win98.js will find it, give it a unique ID, %>
      <%# and call the global initializeGitalkForWindow function. %>
      <div id="gitalk-container-placeholder" style="padding: 15px;">
          <!-- Content will be rendered here by Gitalk if initialized successfully -->
          <p><i>评论区加载中...</i></p> <%# Optional loading message %>
      </div>
    <% } %>
</article>
